{% extends 'base.html.twig' %}

{% block title %}{{ 'title.auth_login'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="form">
        <h1>{{ 'title.auth_login'|trans }}</h1>

        {% if error is defined and error|length %}
            {% include 'default/_single_alert_message.html.twig' with {
            is_single_message: true,
            is_dismissible: false,
            type: 'danger',
            message: error,
            } %}
        {% endif %}

        <div>
            {{ form_start(form, { method: 'post', action: path('auth_login_check') }) }}
            {{ form_widget(form) }}
            <p><a href="{{ url('register')}}"> Don't have an account yet? Sign up!</a></p>
            <input type="submit" value="{{ 'action.login'|trans }}" class="btn" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}