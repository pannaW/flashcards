{% extends 'panel.html.twig' %}

{% block title %}
    Flashcard {{ id }}
{% endblock %}

{% block board %}
    {% block header %}
        <h1>
            Flashcard {{ id }}
        </h1>
    {% endblock %}
    {% block article %}
        {% if flashcard|length %}
            <div>
            {{ flashcard.word }} => {{ flashcard.definition }}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ url('flashcard_edit', {'id': id }) }}"><i class="fa fa-edit"></i></a>
                <a href="{{ url('flashcard_delete', {'id': id }) }}"><i class="fa fa-remove"></i></a>
            {% endif %}
        {% else %}
            <div>
                No flashcards found
            </div>
        {% endif %}
        <br>
        <a href="{{ url('set_view', { 'id' : flashcard.sets_id }) }}" title="Powrót">
            Powrót</a>
    {% endblock %}
{% endblock %}