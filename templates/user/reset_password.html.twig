{% extends 'panel.html.twig' %}

{% block title %}
    {{ 'title.reset_password'|trans }}
{% endblock %}

{% block board %}
    {% block header %}
        <h1> {{ 'title.reset_password'|trans }} </h1>
    {% endblock %}
    {% block article %}
        {{ form_start(form, { method: 'post', action: url('reset_password', {'id': id}) }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success" />
        {{ form_end(form) }}
    {% endblock %}
{% endblock %}