{% extends 'layout.html.twig' %}

    {% block title %}
        All users
    {% endblock %}


    {% block body %}
        <h1> All users </h1>

        {% if user|length %}
            {% for row in user %}
                <li><a href="{{ url('user_view', {'id': row.id }) }}">
                        {{ row.id }}, {{ row.login }}
                    </a></li>
            {% endfor %}

        {% else %}
            <div>
                No users found
            </div>
        {% endif %}

    {% endblock %}

