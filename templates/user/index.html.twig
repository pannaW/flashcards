{% extends 'layout.html.twig' %}

    {% block title %}
        {{ 'title.admin_user_index'|trans }}
    {% endblock %}


    {% block body %}
        <h1> {{ 'title.admin_user_index'|trans }}</h1>

        {% if paginator.data|length %}
            {% for row in paginator.data %}
                <li><a href="{{ url('user_view', {'id': row.id }) }}">
                        {{ row.id }}, {{ row.login }}
                    </a></li>
            {% endfor %}
            {% include 'default/_paginator.html.twig' with {
            paginator: paginator,
            route_name: 'user_index_paginated',
            } %}
        {% else %}
            <div>
                {{ 'message.no_user_found'|trans }}
            </div>
        {% endif %}

    {% endblock %}

