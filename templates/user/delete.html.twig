{% extends 'panel.html.twig' %}

{% block title %}{{ 'title.delete_user'|trans({'%id%': user.id}) }} {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block board %}
    {% block article %}
        <div class="form">
            <h1> {{ 'title.delete_user'|trans({'%id%': user.id}) }} </h1>
        {{ form_start(form, { method: 'post', action: url('user_delete', {'id': user.id}) }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn" />
        {{ form_end(form) }}
        </div>
        <a href="{{ url('user_view', {'id': user.id}) }}" title="{{ 'label.back'|trans }}" class="back btn btn-default">
            <span class="fa fa-mail-reply" aria-hidden="true"></span>
            {{ 'label.back'|trans }}
        </a>
    {% endblock %}
{% endblock %}

