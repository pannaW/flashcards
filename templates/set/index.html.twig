{% extends 'panel.html.twig' %}

    {% block title %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ 'title.admin_set_index'|trans }}
        {% else %}
            {{ 'title.set_index'|trans }}
        {% endif %}
    {% endblock %}


    {% block board %}
        {% block header %}
            <div id="header">
                {% if is_granted('ROLE_ADMIN') %}
                     <h1> {{ 'title.admin_set_index'|trans }} </h1>
                {% else %}
                    <h1> {{ 'title.set_index'|trans }} </h1>
                {% endif %}
            <small>  3 collections | 14 tags </small>
            </div>
        {% endblock %}

        {% block article %}
            <article>
            {% if sets|length %}
                    <ul>
                {% for set in sets %}
                    <li><a href="{{ url('set_view', {'id': set.id }) }}">
                            {{ set.id }}, {{ set.name }} </a></li>
                            {% if set.tags|length and set.tags is iterable %}
                                <ul>
                                {% for tag in set.tags %}
                                <li>
                                    #{{ tag.name }}
                                </li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                {% endfor %}
                    </ul>
                {% if is_granted('ROLE_ADMIN') %}

                    {% include 'default/_paginator.html.twig' with {
                    paginator: paginator,
                    route_name: 'set_index_paginated',
                    } %}

                {% endif %}
            {% else %}
                <div>
                    {{ 'message.no_set_found' }}
                </div>
            {% endif %}
                <a href="{{ url('set_add') }}"> {{ 'label.add_set'|trans }} </a>
            </article>
        {% endblock %}
    {% endblock %}

