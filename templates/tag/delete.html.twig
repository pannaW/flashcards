{% form_theme form with 'form/form_errors.html.twig' %}

{% extends 'panel.html.twig' %}

{% block title %} {{ 'title.delete_tag'|trans({'%id%': tag.id}) }} {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block board %}
    {% block header %}

    {% endblock %}
    {% block article %}
        <div class="form">
        <h1> {{ 'title.delete_tag'|trans({'%id%': tag.id}) }} </h1>
        {{ form_start(form, { method: 'post', action: url('tag_delete', {'id': tag.id}) }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn" />
        {{ form_end(form) }}
        </div>

        <a href="{{ url('tag_index') }}" title="{{ 'label.back'|trans }}" class="back btn btn-default">
            <span class="fa fa-mail-reply" aria-hidden="true"></span>
            {{ 'label.back'|trans }}
        </a>
    {% endblock %}
{% endblock %}