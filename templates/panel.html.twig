{% extends 'base.html.twig' %}

    {% block title %} Panel {% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
        <link href="{{ asset('css/panel.css') }}" rel="stylesheet">
    {% endblock %}

    {% block body %}
        {% block navigation %}

            {% include 'panel/navigation.html.twig' %}

        {% endblock %}

        {% block main %}
            <div id="wrapper">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% include 'panel/sidebar.html.twig' %}
                    {% else %}
                            <style>
                                @media (min-width: 768px) {
                                    #wrapper { padding-left:0}
                                }
                            </style>
                {% endif %}

                {% block dashboard %}
                    <div class="page-content-wrapper">
                        <div id="fluid" class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    {% block board %}
                                        {% block header %}
                                            {% endblock %}
                                        {% block article %}
                                        {% endblock %}
                                    {% endblock %}
                                </div>
                            </div>
                            {% include 'panel/footer.html.twig' %}
                        </div>
                    </div>
                {% endblock %}
            </div>
        {% endblock %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}

